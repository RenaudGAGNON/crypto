<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Retour à la liste", trading_orders_path, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>

  <!-- En-tête de la position -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold">Position <%= @position.symbol %></h2>
        <span class="px-3 py-1 rounded-full text-sm font-semibold <%= @position.status == 'open' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= @position.status %>
        </span>
      </div>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <h3 class="text-sm font-medium text-gray-500">Prix d'Entrée</h3>
          <p class="mt-1 text-lg font-semibold"><%= @position.entry_price %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500">Quantité</h3>
          <p class="mt-1 text-lg font-semibold"><%= @position.quantity %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500">Profit Total</h3>
          <p class="mt-1 text-lg font-semibold <%= @position.total_profit_percentage >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= @position.total_profit_percentage %>%
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Take Profit Levels -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b">
      <h3 class="text-lg font-semibold">Niveaux de Take Profit</h3>
    </div>
    <div class="px-6 py-4">
      <div class="space-y-4">
        <% @position.take_profit_levels.each do |level| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <span class="text-sm font-medium text-gray-500">Niveau <%= level['percentage'] %>%</span>
              <p class="text-lg font-semibold"><%= level['price'] %></p>
            </div>
            <span class="px-3 py-1 rounded-full text-sm font-semibold <%= level['status'] == 'executed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= level['status'] %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Historique des Trades -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b">
      <h3 class="text-lg font-semibold">Historique des Trades</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prix</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantité</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Profit</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @position.trades.each do |trade| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= trade.type == 'take_profit' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= trade.type %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= trade.price %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= trade.quantity %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm <%= trade.profit_percentage >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= trade.profit_percentage %>%
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= trade.created_at.strftime("%d/%m/%Y %H:%M") %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Détails de l'Ordre Binance -->
  <% if @binance_order %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b">
        <h3 class="text-lg font-semibold">Détails de l'Ordre Binance</h3>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">ID de l'Ordre</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @binance_order['orderId'] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Type d'Ordre</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @binance_order['type'] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Statut</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @binance_order['status'] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Prix</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @binance_order['price'] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Quantité Exécutée</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @binance_order['executedQty'] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Date de Création</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= Time.at(@binance_order['time'] / 1000).strftime("%d/%m/%Y %H:%M:%S") %></dd>
          </div>
        </dl>
      </div>
    </div>
  <% end %>
</div> 