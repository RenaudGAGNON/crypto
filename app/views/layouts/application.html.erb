<!DOCTYPE html>
<html>
  <head>
    <title>Crypto Trading</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="min-h-screen bg-gray-100">
      <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <div class="flex-shrink-0 flex items-center">
                <%= link_to "Crypto Trading", root_path, class: "text-xl font-bold text-gray-900" %>
              </div>
              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <%= link_to "Configurations", trading_configs_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(trading_configs_path) ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}" %>
                <%= link_to "Trades", trades_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(trades_path) ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}" %>
                <%= link_to "Opportunités", growth_opportunities_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(growth_opportunities_path) ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}" %>
              </div>
            </div>
            <div class="flex items-center">
              <% if user_signed_in? %>
                <div class="ml-3 relative">
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-700"><%= current_user.email %></span>
                    <%= button_to "Déconnexion", destroy_user_session_path, method: :delete, class: "text-gray-500 hover:text-gray-700" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <main>
        <% if notice %>
          <div class="max-w-7xl mx-auto py-4 sm:px-6 lg:px-8">
            <div class="rounded-md bg-green-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-green-800"><%= notice %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if alert %>
          <div class="max-w-7xl mx-auto py-4 sm:px-6 lg:px-8">
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800"><%= alert %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
