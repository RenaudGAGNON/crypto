<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Nouvelle Configuration de Trading</h3>
      
      <%= form_with(model: @trading_config, local: true) do |f| %>
        <% if @trading_config.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@trading_config.errors.count, "erreur") %> à corriger :
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @trading_config.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= f.label :api_key, "Clé API Binance", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :api_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Votre clé API Binance</p>
          </div>

          <div>
            <%= f.label :api_secret, "Clé secrète Binance", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :api_secret, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Votre secret API Binance</p>
          </div>

          <div>
            <%= f.label :mode, "Mode", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :mode, [['Live', 'live'], ['Dry Run', 'dry_run']], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">En mode Dry Run, les trades sont simulés sans être exécutés</p>
          </div>

          <div>
            <%= f.label :check_interval, "Intervalle de Vérification (secondes)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :check_interval, min: 60, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Fréquence de vérification des nouvelles opportunités</p>
          </div>

          <div>
            <%= f.label :min_growth_rate, "Taux de Croissance Minimum (%)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :min_growth_rate, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Taux de croissance minimum requis pour considérer un trade</p>
          </div>

          <div>
            <%= f.label :max_investment_per_trade, "Investissement Maximum par Trade (USDT)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :max_investment_per_trade, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">Montant maximum à investir dans chaque trade</p>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <%= link_to "Annuler", trading_configs_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "Créer la Configuration", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 